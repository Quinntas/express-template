{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true,
    "module": "commonjs",
    // NAO MUDA ISSO
    "strict": true,
    // NAO MUDA ISSO
    "strictNullChecks": true,
    // NAO MUDA ISSO
    "strictFunctionTypes": true,
    // NAO MUDA ISSO
    "inlineSources": false,
    // NAO MUDA ISSO
    "esModuleInterop": true,
    // NAO MUDA ISSO
    "isolatedModules": true,
    // NAO MUDA ISSO
    "noUnusedLocals": true,
    // NAO MUDA ISSO
    "noUnusedParameters": true,
    // NAO MUDA ISSO
    "noImplicitReturns": true,
    // NAO MUDA ISSO
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
